<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#234463">
    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        layout="@layout/layout_home"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/llc_bottom"/>
    <include
        android:id="@+id/layout_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        layout="@layout/layout_set"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/llc_bottom"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_bottom"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#33FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llc_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_home"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/home_selector"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llc_set"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_set"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/set_selector"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>