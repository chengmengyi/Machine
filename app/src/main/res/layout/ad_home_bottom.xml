<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:background="@drawable/bg_4ea9c6_8dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/machine_native"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/machine_media"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/machine_logo"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/machine_logo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/machine_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Boom Beach"
                android:textSize="14sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="@id/machine_logo"
                app:layout_constraintLeft_toRightOf="@id/machine_logo"
                app:layout_constraintRight_toLeftOf="@id/tag"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/machine_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#80FFFFFF"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@id/machine_logo"
                app:layout_constraintRight_toLeftOf="@id/machine_btn"
                app:layout_constraintTop_toBottomOf="@id/machine_title"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tag1"
                app:layout_constraintTop_toTopOf="@id/machine_logo"
                app:layout_constraintRight_toLeftOf="@id/machine_btn"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/machine_btn"
                android:layout_width="88dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="Install"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_333333_20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/machine_logo"
                app:layout_constraintBottom_toBottomOf="@id/machine_logo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/machine_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cover1"
        android:scaleType="fitXY"/>
</RelativeLayout>